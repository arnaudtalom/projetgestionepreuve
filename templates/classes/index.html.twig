{% extends 'base.html.twig' %}

{% block title %}Liste des contacts{% endblock %}

{% block body %}
   <!--Main container start -->
	<main class="ttr-wrapper">
		<div class="container-fluid">
			<div class="db-breadcrumb">
				<h4 class="breadcrumb-title">Matieres et Classe</h4>
				<ul class="db-breadcrumb-list">
					<li>Classes</li>
				</ul>
			</div>	
			<!-- Card -->

			<!-- Card END -->
			<div class="row">
                <div class="compose-mail">
                    <a href="/getpageaddclasse" class="btn btn-block">Ajouter</a>
                </div>
                <table class="table">
                    <thead>
                        <tr>
                        <th scope="col">#</th>
                        <th scope="col">Nom</th>
                        <th scope="col">Description</th>
                        <th scope="col">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for item in classes %}
                        <tr>
                            <th scope="row">{{loop.index}}</th>
                            <td>{{item.nom}}</td>
                            <td>{{item.description}}</td>
                            <td>
                            
                                <button style="background: #097d09; color: antiquewhite;"  type="button" class="btn bgblue btn-sm"> 
                                    <a style="color:white;" href="#"><i class="fa fa-edit"></i></a>
                                </button>
                                <button style="background: red; color: antiquewhite;" type="button" class="btn btn-danger btn-sm">
                                    <i class="fa fa-trash-o"></i>
                                </button>

                            </td>
                        </tr>
                    {% endfor %} 
                    </tbody>
                </table>
			</div>
		</div>
	</main>
	<div class="ttr-overlay"></div>
	<!--End container start -->
{% endblock %}